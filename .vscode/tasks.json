{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Run Java",
			"type": "shell",
			"command": "mkdir -p \"${fileDirname}/out\" && javac -d \"${fileDirname}/out\" \"${file}\" && java -cp \"${fileDirname}/out\" \"${fileBasenameNoExtension}\"",
			"group": "build",
			"problemMatcher": [],
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": false
			},
			"options": {
				"cwd": "${fileDirname}"
			}
		},
		{
			"label": "Run C++",
			"type": "shell",
			"command": "mkdir -p \"${fileDirname}/out\" && g++ \"${file}\" -std=c++17 -O2 -o \"${fileDirname}/out/main\" && \"${fileDirname}/out/main\"",
			"group": "build",
			"problemMatcher": [],
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": false
			},
			"options": {
				"cwd": "${fileDirname}"
			}
		}
  	]
}
